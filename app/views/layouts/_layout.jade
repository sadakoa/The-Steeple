doctype html

block init
  - var pageTitle = 'document';
  - var bodyClass = '';

html(lang="ja")
  head
    title= pageTitle
    //- default-settting
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    meta(name="description" content="THE STEEPLE IS TOKYO BASED UI DESIGN SOFTWARE PRODUCTS")
    meta(name="keywords" content="the steeple, sadakoa, mamoru kijima, 貴島 衛, サダコエ, UIデザイナー")
    meta(name="mobile-web-app-capable" content="yes")

    //- ogp setting
    meta(property="og:title" content="The Steeple")
    meta(property="og:site_name" content="The Steeple")
    meta(property="og:type" content="website")
    meta(property="og:description" content="THE STEEPLE IS TOKYO BASED UI DESIGN SOFTWARE PRODUCTS")
    meta(property="og:image" content="http://the-steeple.tokyo/assets/images/ogp.jpg")
    meta(property="og:url" content="http://the-steeple.tokyo")
    meta(property="og:locale" content="ja_JP")

    //- twitter setting
    meta(name="twitter:card" content="summary")
    meta(name="twitter:title" content="The Steeple")
    meta(name="twitter:description" content="THE STEEPLE IS TOKYO BASED UI DESIGN SOFTWARE PRODUCTS")
    meta(name="twitter:site" content="@the_steeple")
    meta(name="twitter:site:id" content="@the_steeple")
    meta(name="twitter:creator" content="@the_steeple")
    meta(name="twitter:creator:id" content="@the_steeple")
    meta(name="twitter:image:src" content="http://the-steeple.tokyo/assets/images/ogp.jpg")

    link(rel="shortcut icon" type="image/x-icon" href="favicon.ico")
    link(rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16")
